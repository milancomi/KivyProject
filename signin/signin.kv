<FlatButton@ButtonBehavior+Label>: #@ ZNACI INHERIT FROM BUTTON i Label I DOLE GA POZOVEMO
    font_size: 16
    canvas.before:
        Color:
            rgba:(.06,.45,.45,1)
        Rectangle:
            size:self.size
            pos:self.pos

<SigninWindow>
    id: main_win
    orientation: 'vertical'
    spacing: 10
    space_x: self.size[0]/3 # na sredini i trecinu da zauzima
    canvas.before:
        Color:
            rgba:(1,1,1,1)
        Rectangle:
            size:self.size
            pos:self.pos
    BoxLayout:
        size_hint_y: None
        height:50 # None i onda sami definisemo velicinu
        canvas.before:
            Color:
                rgba:(.06,.45,.45,1)
            Rectangle:
                size:self.size
                pos:self.pos
        Label:
            text: "Access Control"
            bold: True
            size_hint_x: .9 #koliko da uzme prostora u procentima
        FlatButton:
            text: "x"
            size_hint_x: .1
    BoxLayout:
        orientation:'vertical'
        padding: main_win.space_x,10 # distance between widgets
        # spacing:20
        BoxLayout:
            orientation: 'vertical'
            spacing:10
            size_hint_y:None
            height:100
            Label:
                id: info
                text:''
                markup:True
                size_hint_y: None
                height:20
            TextInput:
                id: username_field
                hint_text:"Username"
                multiline: False
                focus: True
                on_text_validate: pwd_field.focus = True # OPASNA FORA
            TextInput:
                id:pwd_field
                hint_text:"Password"
                multiline: False
                password: True
                on_text_validate: root.validate_user()
        Label:
            id:sp
            size_hint_y:None
            height:40
        Button:
            text: "Sign In"
            size_hint_y:None
            height:40
            background_color:(.06,.45,.45,1)
            background_normal:'' # BUG SA SLIKOM
            on_release: root.validate_user()
        Label:
            text:"ASD"
            id:sp2
            size_hint_y:None
            height:40